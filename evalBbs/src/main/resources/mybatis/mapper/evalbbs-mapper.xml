<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.green.evalBbs.dao.IEvalBbsDao">
  <select id="getList" resultType="com.green.evalBbs.dto.EvalBbsDto">
	SELECT * FROM evalbbs
  </select>
  
  <select id="detail">
	SELECT * FROM evalbbs WHERE bno= #{bno}
  </select>
  
  <insert id="write">
	INSERT INTO evalbbs (title, content, writer, regdate) VALUES (#{dto.title}, #{dto.content}, #{dto.writer}, #{dto.regdate})
  </insert>
  
  <delete id="delete">
	DELETE FROM evalbbs WHERE bno= #{bno}
  </delete>
</mapper>